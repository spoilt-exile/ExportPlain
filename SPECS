Налаштування які доступні для модулю ExportPlain

(!) ОБОВ’ЯЗКОВОВЕ НАЛАШТУВАННЯ

export_* (загальні налаштування експорту);
     type {String} (!) (тип модуля експорту, вказує на необхідний для роботы модуль);
     name {String} (!) (назва схеми експорту повідомлень);
     print {String} (унікальний ідентифікатор схеми експорту, при створенні заповнюється системою);
     template {String} (вказівник на шаблон експорту, докладіше про шаблони див. TEMPLATE_SPECS);
plain_* (настройки модуля экспорта PLAIN);
     path {String} (!) (путь для сохранения файлов экспорта);
     nameing {Enum = [INDEX, HEADER]} (за умовчанням HEADER) (вказівник на бажане 
     ім’я експортованих файлів. INDEX - індекс повідомлення. HEADER - вказує на заголовок.);
opt_* (опціональні налаштування);
     log {Boolean} (вказівник на журналювання експорту повідомлення);